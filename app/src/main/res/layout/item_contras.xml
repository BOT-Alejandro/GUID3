<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:radius="4dp"
    app:cardCornerRadius="12dp"
    android:background="?attr/colorSurface"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/contenidoPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_de_contrasena"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo1"
            />

        <TextView
            android:id="@+id/txtViewTituloContrasena"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_de_contrasena"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text="Facebook: Alejandro Martinez"
            android:textStyle="bold"
            android:textColor="?attr/android:textColorPrimary"
            android:fontFamily="@font/fuente_principal"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textViewCorreo"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTituloContrasena"
            android:layout_alignStart="@+id/txtViewTituloContrasena"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fuente_principal"
            android:text="hectoralejandro037@gmail.com"
            android:textColor="?attr/android:textColorSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCorreo"
            android:layout_alignStart="@+id/txtViewTituloContrasena"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fuente_principal"
            android:text="ejM0287#a2^(423"
            android:maxLength="16"
            android:textColor="?attr/android:textColorSecondary"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btnMostrarOcultar"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ocultar_icono"
            android:contentDescription="Mostrar/Ocultar Contraseña"
            android:layout_toStartOf="@+id/btnEditar"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/editar_icono"
            android:contentDescription="Editar Contraseña"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
