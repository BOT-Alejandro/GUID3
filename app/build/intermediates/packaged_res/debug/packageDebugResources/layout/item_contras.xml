<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:radius="4dp"
    app:cardCornerRadius="12dp"
    android:background="?attr/colorSurface">

    <RelativeLayout
        android:id="@+id/contenidoPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_de_contrasena"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:src="@drawable/logo1"
            />

        <TextView
            android:id="@+id/txtViewTituloContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_de_contrasena"
            android:layout_marginStart="5dp"
            android:text="Facebook"
            android:textColor="?attr/android:textColorPrimary"
            android:fontFamily="@font/fuente_principal"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textViewCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_de_contrasena"
            android:layout_below="@+id/txtViewTituloContrasena"
            android:layout_marginStart="5dp"
            android:text="hectoralejandro037@gmail.com"
            android:textColor="?attr/android:textColorSecondary"
            android:fontFamily="@font/fuente_principal"
            android:textSize="12sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/textViewContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_de_contrasena"
            android:layout_below="@+id/textViewCorreo"
            android:layout_marginStart="5dp"
            android:text="Alex0028012"
            android:textColor="?attr/android:textColorSecondary"
            android:fontFamily="@font/fuente_principal"
            android:textSize="12sp"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/btnMostrarOcultar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ocultar_icono"
            android:contentDescription="Mostrar/Ocultar Contraseña"
            android:layout_toStartOf="@+id/btnEditar"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/editar_icono"
            android:contentDescription="Editar Contraseña"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
