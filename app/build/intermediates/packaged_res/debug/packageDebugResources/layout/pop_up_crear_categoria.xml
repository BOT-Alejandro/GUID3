<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo_ajustes">

    <TextView
        android:id="@+id/textview_nombre_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la categoría"
        android:fontFamily="@font/fuente_principal"
        android:textSize="14sp"
        android:textColor="?attr/android:textColorSecondary"
        android:textStyle="bold"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputTextCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fuente_principal"
        android:hint="Categoría 1"
        android:inputType="text"
        android:textColor="?attr/android:textColorPrimary"
        android:maxLength="16"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnCategoriaGuardar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:fontFamily="@font/fuente_principal"
            android:backgroundTint="?attr/colorSecondary"
            android:textColor="?attr/colorOnSecondary"
            />

        <Button
            android:id="@+id/btnCategoriaCancelar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:fontFamily="@font/fuente_principal"
            android:layout_marginTop="10dp"
            android:backgroundTint="?attr/colorSecondary"
            android:textColor="?attr/colorOnSecondary"/>
    </LinearLayout>
</LinearLayout>
