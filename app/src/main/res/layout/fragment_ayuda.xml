<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Ayuda">

    <!-- Título del Fragmento -->
    <TextView
        android:id="@+id/txtAyudaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a la Ayuda"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"/>

    <!-- Descripción de la aplicación -->
    <TextView
        android:id="@+id/txtDescripcionApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GUID3 es una aplicación que permite gestionar y almacenar de forma segura tus contraseñas y datos personales."
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtAyudaTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Instrucciones de uso -->
    <TextView
        android:id="@+id/txtInstruccionesUso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1. Crea una nueva contraseña con el botón 'Agregar'.\n2. Visualiza tus contraseñas de forma segura.\n3. Edita y elimina contraseñas cuando lo necesites."
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtDescripcionApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pregunta sobre cambiar el idioma -->
    <TextView
        android:id="@+id/txtPreguntaIdioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cómo puedo cambiar el idioma?"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtInstruccionesUso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtRespuestaIdioma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Puedes cambiar el idioma de la aplicación desde los ajustes en la sección 'Idioma'."
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtPreguntaIdioma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pregunta sobre cambiar el tema -->
    <TextView
        android:id="@+id/txtPreguntaTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cómo puedo cambiar el tema a oscuro?"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtRespuestaIdioma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtRespuestaTema"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Puedes activar el tema oscuro desde los ajustes de la aplicación en la sección 'Tema'."
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtPreguntaTema"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de contacto o soporte -->
    <Button
        android:id="@+id/btnContactoSoporte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contactar Soporte"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtRespuestaTema"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
